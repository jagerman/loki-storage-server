[Unit]
Description=Loki storage server (testnet)
After=network-online.target
Wants=loki-testnet-node.service
After=loki-testnet-node.service

[Service]
User=_loki
Type=notify
WatchdogSec=5min
WorkingDirectory=/var/lib/loki
Restart=always
RestartSec=5s
ExecStart=/usr/bin/loki-storage --config-file /etc/loki/storage-testnet.conf

[Install]
WantedBy=multi-user.target
